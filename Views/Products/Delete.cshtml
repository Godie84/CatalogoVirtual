@model CatalogoVirtual.Models.Product

@{
    ViewData["Title"] = "Eliminar producto";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath"
                     class="card-img-top"
                     style="max-height: 250px; object-fit: cover;" />
            }

            <div class="card-body p-4">
                <h4 class="text-danger fw-bold mb-3">
                    ¿Eliminar este producto?
                </h4>

                <p class="mb-4">
                    Esta acción <strong>no se puede deshacer</strong>.
                    Verifique la información antes de continuar.
                </p>

                <ul class="list-group list-group-flush mb-4">
                    <li class="list-group-item">
                        <strong>Nombre:</strong> @Model.Name
                    </li>
                    <li class="list-group-item">
                        <strong>Categoría:</strong> @Model.Category?.Name
                    </li>
                    <li class="list-group-item">
                        <strong>Precio:</strong> $@Model.Price
                    </li>
                    <li class="list-group-item">
                        <strong>Stock:</strong> @Model.Quantity
                    </li>
                </ul>

                <form asp-action="Delete">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger">
                            Sí, eliminar producto
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
