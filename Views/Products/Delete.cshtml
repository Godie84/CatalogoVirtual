@model CatalogoVirtual.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar producto</h1>

<h3 class="text-danger">
    ¿Está seguro que desea eliminar este producto?
</h3>

<hr />

<dl class="row">
    <dt class="col-sm-3">Nombre</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">Cantidad</dt>
    <dd class="col-sm-9">@Model.Quantity</dd>

    <dt class="col-sm-3">Precio</dt>
    <dd class="col-sm-9">@Model.Price</dd>

    <dt class="col-sm-3">Categoría</dt>
    <dd class="col-sm-9">@Model.Category?.Name</dd>
</dl>

@if (!string.IsNullOrEmpty(Model.ImagePath))
{
    <div class="mb-3">
        <label>Imagen</label><br />
        <img src="@Model.ImagePath" width="150" />
    </div>
}

<form asp-action="Delete">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <input type="submit" value="Eliminar" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
